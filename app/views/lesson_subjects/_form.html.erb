<%= form_for @lesson_subject do |f| %>
  <% if @lesson_subject.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= t :error, count: @lesson_subject.errors.count %>
      </h2>
      <ul>
        <% @lesson_subject.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
