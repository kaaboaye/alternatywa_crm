<%= form_for @contract, url: member_contracts_path(@contract.member) do |f| %>
  <% if @contract.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= t :error, count: @contract.errors.count %>
      </h2>
      <ul>
        <% @contract.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% unless @contract.new_record? %>
    <input type="hidden" name="id" value="<%= @contract.id %>" />
  <% end %>

  <p>
    <%= f.label :since %><br>
    <%= f.date_field :since %>
  </p>
  <p>
    <%= f.label :finish %><br>
    <%= f.date_field :finish %>
  </p>
  <p>
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
