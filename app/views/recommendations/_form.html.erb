<%= form_for @recommendation, url: member_recommendations_path(@recommendation.member) do |f| %>
  <% if @recommendation.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= t :error, count: @recommendation.errors.count %>
      </h2>
      <ul>
        <% @recommendation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <input type="hidden" name="id" value="<%= @recommendation.id %>" />
  <p>
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
