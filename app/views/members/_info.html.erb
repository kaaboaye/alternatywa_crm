<table class="table-list table-bordered">
  <tbody>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.first_name" %>
      </th>
      <td>
        <%= @member.first_name %>
      </td>
      <td ng-controller="MembersInfoCtrl" rowspan="99999"
          style="vertical-align:top;" ng-init="set_id(<%= @member.id %>)">
        <%= form_for @member do |f| %>
          <%= f.label :note %><br />
          <%= f.text_area :note, "ng-model" => "note" %>
        <% end %>
        <input type="button" value="<%= t :save %>" ng-click="save()" />
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.last_name" %>
      </th>
      <td>
        <%= @member.last_name %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.pesel" %>
      </th>
      <td>
        <%= @member.pesel %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.birth_date" %>
      </th>
      <td>
        <date value="<%= @member.birth_date %>" />
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.street" %>
      </th>
      <td>
        <%= @member.street %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.house_number" %>
      </th>
      <td>
        <%= @member.house_number %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.city" %>
      </th>
      <td>
        <%= @member.city %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.school_id" %>
      </th>
      <td>
        <% if @member.school %>
          <%= @member.school.name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.work" %>
      </th>
      <td>
        <%= @member.work %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.email" %>
      </th>
      <td>
        <%= @member.email %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.phone" %>
      </th>
      <td>
        <%= @member.phone %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.fathers_phone" %>
      </th>
      <td>
        <%= @member.fathers_phone %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.mothers_phone" %>
      </th>
      <td>
        <%= @member.mothers_phone %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        <%= t "activerecord.attributes.member.is_parents_agreement" %>
      </th>
      <td>
        <% if @member.is_parents_agreement %>
          <span class="text-success"><%= t :is %></span>
        <% else %>
          <span class="text-danger"><%= t :is_not %></span>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
